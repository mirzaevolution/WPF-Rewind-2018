<Window x:Class="TooltipRewind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TooltipRewind"
        mc:Ignorable="d"
        Title="MainWindow" Height="193.2" Width="278.6">
    <Grid>
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Button #1" Width="100" Height="30" Margin="10">
                <Button.ToolTip>
                    <StackPanel>
                        <Label FontWeight="Bold" >Button 1</Label>
                        <Label >This is button 1</Label>
                    </StackPanel>
                </Button.ToolTip>
            </Button>
        </WrapPanel>
    </Grid>
</Window>
