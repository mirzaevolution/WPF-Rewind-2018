<Window x:Class="CalendarRewind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalendarRewind"
        mc:Ignorable="d"
        Title="MainWindow" Height="329.512" Width="230.5">
    <Grid>
        <StackPanel Margin="10">
            <DatePicker Name="DatePickerMain" Margin="5" SelectedDateChanged="DatePickerMainChangeEvent" SelectedDateFormat="Long"/>
            <Calendar Name="CalendarMain" Margin="5" SelectionMode="SingleDate" SelectedDatesChanged="CalendarMainChangeHandler"/>
            <TextBox Name="TextBoxDateChange" Margin="5" Padding="4"/>
        </StackPanel>
    </Grid>
</Window>
