<Window x:Class="TranslateTransformRewind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TranslateTransformRewind"
        mc:Ignorable="d"
        Title="MainWindow" Height="224" Width="383">
    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
        <Button Margin="5" Width="110" Content="Normal Button"/>
        <Button Margin="5" Width="110" Content="Translated Button">
            <Button.RenderTransform>
                <TranslateTransform X="-50" Y="10"/>
            </Button.RenderTransform>
        </Button>
    </StackPanel>
</Window>
