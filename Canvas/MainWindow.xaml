<Window x:Class="Canvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Canvas"
        mc:Ignorable="d" 
        Title="Canvas Sample" Height="151" Width="303.5">
    <Canvas Name="CanvasBase">
        <TextBlock Text="First Name" Canvas.Left="10" Canvas.Top="10"/>
        <TextBox Name="TextBoxFirstName" Canvas.Left="105" Canvas.Top="10" Width="168"/>
        <TextBlock Text="Last Name" Canvas.Left="10" Canvas.Top="40"/>
        <TextBox Name="TextBoxLastName" Canvas.Left="105" Canvas.Top="40" Width="168"/>
        <Button Name="ButtonShift" Content="Shift" Canvas.Left="10" Canvas.Top="82" Width="75" Click="ButtonShiftClick"/>
        <Button x:Name="ButtonShitRight" Content="Shift Right" Canvas.Left="103" Canvas.Top="82" Width="75" Click="ButtonShiftRightClick"/>
        <Button Name="ButtonOK" Content="OK" Canvas.Left="198" Canvas.Top="82" Width="75" Click="ButtonOkClick"/>
    </Canvas>
</Window>
