<Window x:Class="LineRewind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LineRewind"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <UniformGrid Columns="2" Rows="2">
        <Grid Background="RoyalBlue">
            <Line X1="10" Y1="10" X2="175" Y2="50" Stroke="White" 
                  StrokeThickness="4" StrokeEndLineCap="Round" StrokeStartLineCap="Round"/>
            <Line X1="10" Y1="100" X2="175" Y2="50" Stroke="White" 
                  StrokeThickness="4" StrokeEndLineCap="Round" StrokeStartLineCap="Round"/>
            <Line X1="10" Y1="10" X2="10" Y2="100" Stroke="White"
                  StrokeThickness="4" StrokeEndLineCap="Round" StrokeStartLineCap="Round"/>
        </Grid>
 
    </UniformGrid>
</Window>
